{# eleventy-sample/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title + " | " if title else "" }}Ken Courtney UX Portfolio</title>
    {# Favicon Links #}
    <link rel="icon" type="image/x-icon" href="{{ '/favicon/favicon.ico' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/favicon/favicon-16x16.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/favicon/favicon-32x32.png' | url }}">
    <link rel="apple-touch-icon" href="{{ '/favicon/apple-touch-icon.png' | url }}">
    {# Call Google Fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {# IBM Plex Mono and Poppins #}
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    {# Material Icons #}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,0..200&display=swap" />

    {# Custom CSS #}
    <link rel="stylesheet" href="/css/style.css">
</head>

<body {% if pageClass %}class="{{ pageClass }}"{% endif %}>
    <div class="site-wrapper">
        <header class="site-header content-section">
            <div class="logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="264" height="264" viewBox="0 0 264 264" fill="none">
                    <circle cx="116" cy="116" r="113" stroke="#D9D9D9" stroke-width="6"/>
                    <circle cx="148" cy="148" r="113" fill="#D9D9D9" stroke="#008FFF" stroke-width="6"/>
                </svg><a href="/">ken courtney</a>
            </div>
            
            {# Desktop navigation - hidden on mobile #}
            <nav class="main-navigation desktop-nav">
                <ul>
                    {% for item in collections.primaryNav %}
                        {% if item.key == "Work" %}
                            <li class="has-dropdown">
                                <a href="{{ item.url }}" aria-expanded="false" aria-controls="work-dropdown">
                                    {{ item.title }} <span class="material-symbols-outlined dropdown-arrow">expand_more</span>
                                </a>
                                <div id="work-dropdown" class="dropdown-panel" data-visible="false">
                                    <ul>
                                        {# Now we loop through the case studies collection directly #}
                                        {% for caseStudy in collections.caseStudies %}
                                            <li><a href="{{ caseStudy.url | url }}">{{ caseStudy.data.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ item.url }}" {% if item.isExternal %}target="_blank" rel="noopener noreferrer"{% endif %}>
                                    {{ item.title }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>

            {# Mobile Hamburger Icon - hidden on desktop #}
            <button class="mobile-nav-toggle" aria-controls="mobile-nav" aria-expanded="false" aria-label="Open navigation menu">
                <span class="material-symbols-outlined">menu</span>
            </button>
        </header>

        <main class="main-content">
            {% block page_content %}
                {{ content | safe }}
            {% endblock %}
        </main>

        <footer class="site-footer content-section">
            <div class="footer-links">
                <a href="/" aria-label="Home">
                    <span class="material-symbols-outlined">home</span>
                </a>
                <span class="footer-separator">·</span>
                <a href="https://www.behance.net/kennethcourtney1" target="_blank" rel="noopener noreferrer">behance</a>
                <span class="footer-separator">·</span>
                <a href="https://www.linkedin.com/in/kennethwcourtney/" target="_blank" rel="noopener noreferrer">linkedin</a>
            </div>
            <div class="footer-copyright">
                <p>© {% year %} Ken Courtney</p>
            </div>
        </footer>
    </div>

    {# Mobile Navigation Panel (Full-screen overlay) #}
    <nav id="mobile-nav" class="mobile-nav-panel" data-visible="false">
        <button class="mobile-nav-close" aria-label="Close navigation menu">
            <span class="material-symbols-outlined">close</span>
        </button>
        <ul>
            {% for item in collections.primaryNav %}
                {% if item.key == "Work" %}
                    <li class="has-accordion">
                        <button aria-expanded="false" aria-controls="mobile-work-accordion">
                            {{ item.title }} <span class="material-symbols-outlined dropdown-arrow">expand_more</span>
                        </button>
                        <div id="mobile-work-accordion" class="accordion-content" data-visible="false">
                            <ul>
                                 {% for caseStudy in collections.caseStudies %}
                                    <li><a href="{{ caseStudy.url | url }}">{{ caseStudy.data.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% else %}
                     <li>
                        <a href="{{ item.url }}" {% if item.isExternal %}target="_blank" rel="noopener noreferrer"{% endif %}>
                            {{ item.title }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>

    <a href="#" class="back-to-top" aria-label="Return to top of page">
        <span class="material-symbols-outlined">arrow_upward</span>
    </a>
    <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>